<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Leons</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/perzonalizado.css"/>
    <link rel="stylesheet" href="~/Leons.styles.css" asp-append-version="true" />
</head>
<body >
    <header>
       
        <nav class=" navbar navbar-expand-lg bg-color bg-dark fixed-top">
            <div class="container">
                <a class=" navbar-brand" asp-controller="Home" asp-action="Index"> <span class="logo-gradient">Leons</span>Textiles</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon "></span>
                </button>
                <div class="collapse navbar-collapse align-items-center" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-center">
                        <li class="nav-item">
                            <a class="nav-link " href="/Home/Index#nosotros">Nosotros</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link color-l" href="/Home/Index#services">Servicios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Index#galeria">Portfolio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link">Contacto</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Pedido" asp-action="Crear">Pedidos</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Tienda" asp-action="Index">Tienda</a>
                        </li>
                        
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <div class="dropdown ms-3">
                                    <a class="nav-link dropdown-item" href="#" id="perfilDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-person-circle fs-3"> </i>
                                    </a>

                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="perfilDropdown">
                                        <li><p class="dropdown-header">@User.Identity.Name.ToUpper()</p></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="Acceso" asp-action="Login">Inicia sesión</a></li>
                                        <li><a class="dropdown-item" asp-controller="Acceso" asp-action="RegistroCliente">Registrate</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" href="#">Mi cuenta</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="Acceso" asp-action="Logout">Cerrar Sesion</a></li>
                                    </ul>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link disabled">Bienvenido <span class="text-success">@User.Identity.Name.ToUpper()</span></a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <div class="dropdown ms-3">
                                    <a class="nav-link dropdown-item" href="#" id="perfilDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-person-circle fs-3"> </i>
                                    </a>

                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="perfilDropdown">
                                        <li><p class="dropdown-header">escoga una opción</p></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="Acceso" asp-action="Login">Inicia sesión</a></li>
                                        <li><a class="dropdown-item" asp-controller="Acceso" asp-action="RegistroCliente">Registrate</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" href="#">Mi cuenta</a></li>

                                    </ul>
                                </div>
                            </li>
                        }

                    </ul>

                    

                    
                    
                    
                    
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid mx-0 px-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
