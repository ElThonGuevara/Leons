<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Panel Admin</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/admin.css" />
        <link rel="stylesheet" href="~/Leons.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-dark text-white p-3" id="sidebar">
            <h4 class="text-center">Barra lateral</h4>
            <hr />
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Admin" asp-action="Dashboard">Inicio</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Admin" asp-action="Dashboard">Panel de control</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Pedido" asp-action="Crear">Pedidos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Producto" asp-action="Lista">Productos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Usuario" asp-action="Lista">Clientes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Roles" asp-action="Lista">Roles</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Categoria" asp-action="Lista">Categoria</a>
                </li>
            </ul>
            <hr />
            @if (User.Identity.IsAuthenticated)
            {
                <div class="mt-auto text-center">
                    <img src="https://i.pravatar.cc/50" class="rounded-circle mb-2" />
                    <p>@User.Identity.Name.ToUpper()</p>
                </div>
            }
            else
            {
                <div>
                    <p>No autenticado</p>
                </div>
            }

            <div>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Tienda" asp-action="Index">Volver a tienda</a>
                </li>
            </div>
            
        </div>

        <!-- Page content -->
        <div id="page-content-wrapper" class="p-4 w-100">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    
</body>
</html>
