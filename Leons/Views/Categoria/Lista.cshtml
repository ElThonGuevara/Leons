@model IEnumerable<Leons.Models.Categoria>;

@{
    ViewData["Title"] = "Lista de Categorias";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

    <div class="container">
        <a asp-controller="Categoria" asp-action="Crear" class="btn btn-primary mb-3">Crear Nuevo Categoría</a>
        <div>Lista de Categorias</div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var categoria in Model)
                {
                    <tr>
                        <td>@categoria.idCategoria</td>
                        <td>@categoria.nombre</td>
                        <td>@categoria.descripcion</td>
                        <td>
                            <a asp-controller="Categoria" asp-action="Editar" asp-route-id="@categoria.idCategoria" class="btn btn-dark"><i class="bi bi-pen-fill fs-3"></i></a>
                            <a asp-controller="Categoria" asp-action="Eliminar" asp-route-id="@categoria.idCategoria" class="btn btn-danger" onclick="return confirmar()"><i class="bi bi-trash-fill fs-3"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


@section Scripts {
    <script>
        function confirmar(){
            return confirm("¿Estás seguro de eliminar esta Categoría?")
        }

    </script>

}