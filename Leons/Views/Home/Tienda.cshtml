@model IEnumerable<Leons.Models.Producto>;

<div id="carouselExampleIndicators" class="carousel slide mi-carrusel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/img/todoMujer.jpg" class="d-block w-100" alt="...">
            <div class="carousel-caption text-start custom-caption">
                <h1 class="display-1 fw-bold">Todo Mujer</h1>
                <p class="fs-3">Hasta 50% dscto.</p>
                <a class="btn btn-outline-light btn-lg" href="#">Ver colección</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/img/todoHombre.jpg" class="d-block w-100" alt="...">
            <div class="carousel-caption text-start custom-caption">
                <h1 class="display-1 fw-bold">Todo Hombre</h1>
                <p class="fs-3">Hasta 50% dscto.</p>
                <a class="btn btn-outline-light btn-lg" href="#">Ver colección</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/img/todoNiño.jpg" class="d-block w-100" alt="...">
            <div class="carousel-caption text-start custom-caption">
                <h1 class="display-1 fw-bold">Todo Niños</h1>
                <p class="fs-3">Hasta 50% dscto.</p>
                <a class="btn btn-outline-light btn-lg" href="#">Ver colección</a>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<section id="catalogo" class=" bg-white">
    <div class="container">
        <h2 class="text-center mb-4">Catálogo de Productos</h2>

        <!-- Filtros (solo visuales por ahora) -->
        <div class="row mb-4">
            <div class="col-md-3">
                <select class="form-select">
                    <option selected>Tipo de prenda</option>
                    <option>Ropa casual</option>
                    <option>Uniformes</option>
                    <option>Prendas personalizadas</option>
                    <option>Accesorios</option>
                </select>
            </div>
            <div class="col-md-3">
                <select class="form-select">
                    <option selected>Género</option>
                    <option>Hombre</option>
                    <option>Mujer</option>
                    <option>Unisex</option>
                </select>
            </div>
            <div class="col-md-3">
                <select class="form-select">
                    <option selected>Talla</option>
                    <option>S</option>
                    <option>M</option>
                    <option>L</option>
                    <option>XL</option>
                </select>
            </div>
            <div class="col-md-3">
                <select class="form-select">
                    <option selected>Color</option>
                    <option>Blanco</option>
                    <option>Negro</option>
                    <option>Azul</option>
                    <option>Rojo</option>
                </select>
            </div>
        </div>

        <!-- Cards de productos -->
        <div class="row row-cols-1 row-cols-md-3 g-4">

            @foreach(var producto in Model)
            {
                <!-- Producto 1 -->
                <div class="col">
                    <div class="card h-100">
                        <img src="@Url.Content(producto.imagen)" class="card-img-top card-img-custom" alt="@producto.nombre">
                        <div class="card-body">
                            <h5 class="card-title">@producto.nombre</h5>
                            <p class="card-text">@producto.descripcion, disponible en colores sólidos y estampados.</p>
                            <p class="mb-1"><strong>Tallas:</strong> S, M, L, XL</p>
                            <p class="text-muted">Precio: S/ @producto.precio</p>
                        </div>
                    </div>
                </div>
            }

            

            @* !-- Producto 2 -->
            <div class="col">
                <div class="card h-100">
                    <img src="img/poloCarnaval-1.jpg" class="card-img-top" alt="Uniforme Médico">
                    <div class="card-body">
                        <h5 class="card-title">Uniforme Médico</h5>
                        <p class="card-text">Uniforme de tela antifluido, cómodo y resistente para jornadas largas.</p>
                        <p class="mb-1"><strong>Tallas:</strong> XS, S, M, L, XL</p>
                        <p class="text-muted">Precio: S/ 75.00</p>
                    </div>
                </div>
            </div>

            <!-- Producto 3 -->
            <div class="col">
                <div class="card h-100">
                    <img src="img/poloCarnaval-1.jpg" class="card-img-top" alt="Polo Personalizado Empresa">
                    <div class="card-body">
                        <h5 class="card-title">Polo Personalizado</h5>
                        <p class="card-text">Polo con logo bordado o estampado. Ideal para empresas y eventos.</p>
                        <p class="mb-1"><strong>Tallas:</strong> M, L, XL</p>
                        <p class="text-muted">Desde S/ 40.00</p>
                    </div>
                </div>
            </div> *@

        </div>
    </div>
</section>
